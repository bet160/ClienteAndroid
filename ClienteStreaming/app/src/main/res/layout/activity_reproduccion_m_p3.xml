<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ReproduccionMP3">

    <ImageButton
            android:layout_width="78dp"
            android:layout_height="72dp" app:srcCompat="@android:drawable/ic_media_play"
            android:id="@+id/reproductor"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:onClick="reproducir" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.758"/>
    <ImageButton
            android:layout_width="71dp"
            android:layout_height="63dp" app:srcCompat="@android:drawable/ic_media_next"
            android:id="@+id/adelantarAudio"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.75" app:layout_constraintVertical_bias="0.761"
            android:onClick="cambiar"/>
    <ImageButton
            android:layout_width="71dp"
            android:layout_height="63dp" app:srcCompat="@android:drawable/ic_media_previous"
            android:id="@+id/atrasarAudio"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.247" app:layout_constraintVertical_bias="0.761"
            android:onClick="atrasarAudio"/>
    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="242dp"
            android:layout_height="26dp"
            android:id="@+id/progressBar"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.497" app:layout_constraintVertical_bias="0.628"/>
    <TextView
            android:text="Tiempo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tiempoAudio"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.574"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/abc_vector_test" android:id="@+id/botonVolver"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.079"
            app:layout_constraintVertical_bias="0.046" android:onClick="volver"/>
    <ImageView
            android:layout_width="257dp"
            android:layout_height="287dp" app:srcCompat="@drawable/ic_launcher_foreground"
            android:id="@+id/imageView3"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.474" app:layout_constraintVertical_bias="0.238"/>
</androidx.constraintlayout.widget.ConstraintLayout>